﻿@model string

@if (!string.IsNullOrEmpty(Model))
{
    if (ViewBag.Text != null)
    {
        <a href="#" data-toggle="popover" data-title="@ViewBag.Description" data-content="@Model">@ViewBag.Text</a>
    }
    if (ViewBag.Icon != null)
    {
        <a href="#" data-toggle="popover" data-title="@ViewBag.Description" data-content="@Model"><span class="glyphicon @ViewBag.Icon"></span></a>
    }
}