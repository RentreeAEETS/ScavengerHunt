@using (Html.BeginForm("DataExport", "Stunt"))
{
    @Html.AntiForgeryToken()

    <div class="form" role="form">
        <div class="form-group">
            <textarea name="data" class="form-control" style="height:300px;">@ViewBag.ExportData</textarea>
        </div>

        <input type="submit" value="Export" class="btn btn-primary" />
    </div>
}